<div class="col-md-3 col-md-offset-4">
  
  <h2 class="text-center">註冊</h2>

  <hr>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, :input_html => { :class => "form-control" , :placeholder => "輸入真實姓名"}, required: true %>
      <%= f.input :email, :input_html => { :class => "form-control" ,:placeholder => "輸入有效信箱"}, required: true, autofocus: true %>
      <%= f.input :password, :input_html => { :class => "form-control" , :placeholder => "輸入8~15位密碼"}, required: true %>
      <%= f.input :password_confirmation, :input_html => { :class => "form-control" ,:placeholder => "再次輸入密碼"}, required: true %>
    </div>

    <hr>

    <div class="form-actions">
      <p><%= f.button :submit, "註冊", :class => "btn btn-danger" %></p>
    </div>
  <% end %>

  <hr>
  <%= render "devise/shared/links" %>
</div>